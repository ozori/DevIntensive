<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.activities.MainActivity"
    android:orientation="vertical">


    <LinearLayout
    style="@style/InformationBar">

        <LinearLayout
            style="@style/InformationBarElement.Side">
            <TextView
                style="@style/InformationBarText.Value"
                android:text="5"/>
            <TextView
                style="@style/InformationBarText.Description"
                android:text="Рейтинг"/>
        </LinearLayout>

        <LinearLayout
            style="@style/InformationBarSeparator">
        </LinearLayout>

        <LinearLayout
            style="@style/InformationBarElement.Central">
            <TextView
                style="@style/InformationBarText.Value"
                android:text="5"/>
            <TextView
                style="@style/InformationBarText.Description"
                android:text="@string/string_code_lines_desc"/>
            </LinearLayout>

        <LinearLayout
          style="@style/InformationBarSeparator">
        </LinearLayout>

        <LinearLayout
            style="@style/InformationBarElement.Side">
            <TextView
                style="@style/InformationBarText.Value"
                android:text="5"/>
            <TextView
                style="@style/InformationBarText.Description"
                android:text="@string/string_projects_count_desc"/>
        </LinearLayout>

    </LinearLayout> //UserBar


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_extra_small_8"
        android:layout_marginBottom="@dimen/size_extra_small_8"
        >
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_call_black_24dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_large_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16" >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/phone_et"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="phone"
                    android:text="7 (908) 088-22-82"
                    android:hint="Мобильный"
                    android:enabled="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:focusable="false"
                    />
            </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_phone_in_talk_black_24dp"
            />
    </LinearLayout> //phone
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_extra_small_8"
        android:layout_marginBottom="@dimen/size_extra_small_8"
        >
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_email_black_24dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_large_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16" >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/email_et"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress"
                    android:text="myMail"
                    android:hint="E-mail"
                    android:enabled="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:focusable="false"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_send_black_24dp"
            />
    </LinearLayout> //E-Mail

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_extra_small_8"
        android:layout_marginBottom="@dimen/size_extra_small_8"
        >
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/icon_vk"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_large_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16" >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/vk_et"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="Профиль в VK"
                    android:text="vk.com/id24644288"
                    android:enabled="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_visibility_black_24dp"
            />
    </LinearLayout> //Vk

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_extra_small_8"
        android:layout_marginBottom="@dimen/size_extra_small_8"
        >
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/github_logo_24dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_large_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16" >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/repository_et"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="Репозиторий"
                    android:text="github.com/ozori/DevIntensive"
                    android:enabled="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_visibility_black_24dp"
            />
    </LinearLayout> //Repository

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_extra_small_8"
        android:layout_marginBottom="@dimen/size_extra_small_8"
        >
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/round_24dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16" >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/yourself_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="О себе"
                    android:text="Проанализировав успехи Адвентурая и Полоская, британские молодцы Kaiser Chiefs решили подготовить столь же цепляющий поп-хит. В таком деле обязательно нужен хороший продюсер и им стал Brian Higgins, основатель мощной продюсерской группировки Xenomania. Послужной список Брайана очень солидный - Annie, Girls Aloud, Pet Shop Boys, Saint Etienne и многие
                    другие были его клиентами."
                    android:enabled="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

            />
    </LinearLayout> //About yourself

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/gray_light"
        android:layout_marginLeft="@dimen/spacing_larger_72"
        />

</LinearLayout>
